---
interface StudyItem {
  title: string;
  institution: string;
  description: string;
  tags?: string[];
  date?: string;
}

interface Props {
  items: StudyItem[];
  title?: string;
}

const { items, title } = Astro.props as Props;
---

<section class="w-full py-8">
  <div class="mx-auto max-w-6xl px-4">
    {title && (
      <h2 class="text-3xl md:text-4xl font-semibold text-center mb-6 text-foreground">{title}</h2>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
      {items.map((study) => (
        <article class="card-surface p-6">
          <h3 class="text-xl font-semibold text-foreground">{study.title}</h3>
          <div class="mt-1 text-sm text-[color:var(--color-text-secondary)]">{study.institution}</div>
          {study.date && (
            <div class="text-sm text-[color:var(--color-text-muted)] mt-0">{study.date}</div>
          )}
          <p class="mt-3 text-[color:var(--color-text-secondary)]">{study.description}</p>
          {study.tags && study.tags.length > 0 && (
            <div class="mt-4 flex flex-wrap gap-2">
              {study.tags.map((tag) => (
                <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-medium" style="background: var(--tag-pill-bg); color: var(--tag-pill-text); border: 1px solid var(--tag-pill-border);">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </article>
      ))}
    </div>
  </div>
</section>
